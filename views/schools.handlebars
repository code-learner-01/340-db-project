
<h2>Schools</h2>

<table id="table" border="1">
   <thead>
     <th>Name</th>
     <th>Population</th>
     <th>Location</th>
   </thead>
   <tbody>
      {{#each schools}}
        <tr>
          <td>{{schoolName}}</td>
          <td>{{schoolPopulation}}</td>
          <td>{{schoolLocation}}</td>
        </tr>
      {{/each}}
   </tbody>
</table>

<h2>Add School</h2>
<div>
<form id="addschool" action="/schools" method="post">
   <label for="name">Name</label>
   <input type="text" id="name" name="name" placeholder="Hogwarts">

   <label for="Type">Population</label>
   <input type="number" id="type" name="population" placeholder="2000">
  
   <label for="Type">Geographic Location</label>
   <input type="text" id="type" name="location" placeholder="France">
  
   <input type="submit" value="Submit">
</form>
</div>



