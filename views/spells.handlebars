
<h2>Spells</h2>

<table id="table" border="1">
   <thead>
     <th>ID</th>
     <th>Name</th>
     <th>Type</th>
   </thead>
   <tbody>
      {{#each spells}}
        <tr>
          <td>{{spellId}}</td>
          <td>{{spellName}}</td>
          <td>{{spellType}}</td>
        </tr>
      {{/each}}
   </tbody>
</table>

<h2>Add Spell</h2>
<div>
  <form id="addspell" action="/spells" method="post">
     <label for="name">Name</label>
     <input type="text" name="name" placeholder="Expecto Patronum">

     <label for="Type">Type</label>
     <input type="text" name="type" placeholder="Hex">
    <input type="submit" value="Submit">
  </form>
</div>



<h2>Characters and their Spells</h2>
<table id="table" border="1">
   <thead>
     <th>Name</th>
     <th>Spell</th>
   </thead>
  <tbody>
    {{#each charspell}}
      <tr>
        <td>{{fname}} {{lname}}</td>
        <td>{{spell}}</td>
        <td><button onclick="deleteCharSpell({{pid}},{{cid}})">Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>

<h1>Add Characters' Spell</h1>
<div>
  <form id="addcharspell" action="spells/charspells" method="post">
   <label for="character">Character</label>
   <select name="characterId">
      {{#each characters}}
       <option value="{{characterId}}">{{fname}} {{lname}}</option>
      {{/each}}
   </select>

   <label for="spell">Spell</label>
   <select name="spellId">
      {{#each spells}}
      <option value="{{spellId}}">{{spellName}}</option>
      {{/each}}
   </select>
   <input type="submit" value="Submit">
</form>
</div>
