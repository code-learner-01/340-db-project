
<h2>Spells</h2>

<table id="table" border="1">
   <thead>
     <th>Name</th>
     <th>Type</th>
   </thead>
   <tbody>
      {{#each spells}}
        <tr>
          <td>{{spellName}}</td>
          <td>{{spellType}}</td>
        </tr>
      {{/each}}
   </tbody>
</table>

<h2>Add Spell</h2>
<div>
<form id="form">
   <label for="name">Name</label>
   <input type="text" id="name" name="name" placeholder="Expecto Patronum">

   <label for="Type">Type</label>
   <input type="text" id="type" name="type" placeholder="Hex">
</form>
<input id="submit" type="submit" value="Submit">
</div>

<h2>Characters and their Spells</h2>
<table id="table" border="1">
   <tr>
     <th>Name</th>
     <th>Spell</th>
   </tr>
  <tr>
    <td>Harry Potter</td>
    <td>Lumos</td>
  </tr>
</table>

<h1>Add Characters' Spell</h1>
<div>
<form id="form">
   <label for="character">Character</label>
   <select name="character">
       <option value="1">Autopopulate</option>
   </select>

   <label for="character">Spell</label>
   <select name="spell">
       <option value="1">Autopopulate</option>
   </select>
</form>
<input id="submit" type="submit" value="Submit" onclick="submit()"/>
</div>

<h1>Remove Characters' Spell</h1>
<div>
<form id="form">
   <label for="character">Character</label>
   <select name="character">
       <option value="1">Autopopulate</option>
